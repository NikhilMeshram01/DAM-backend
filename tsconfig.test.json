{
    "extends": "./tsconfig.json",
    "include": [
        "tests",
        "src",
        "types"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ],
    "compilerOptions": {
        "noEmit": true,
        "types": [
            "jest",
            "node"
        ],
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    }
}